<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/grey">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/white"/>
            <stroke
                android:width="2dp"
                android:color="@color/green" />
            <corners
                android:radius="50sp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>

    </item>
    <item>
        <shape>
            <solid
                android:color="@color/green" />

            <corners
                android:radius="50sp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

</ripple>